{
  "manifest_version": 3,
  "name": "Web Power Toys â€“ Screenshot & PDF Capture Tools",
  "short_name": "Web Power Toys",
  "description": "Quickly capture webpage screenshots or save timestamped PDFs in one click.",
  "version": "0.2",
  "author": "Saraswan Chakrabortty",

  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },

  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
